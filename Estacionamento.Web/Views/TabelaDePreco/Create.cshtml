@using Estacionamento.Domain.TabelasDePreco;
@model TabelaDePreco
@{
    ViewBag.Title = "Tabela de preço";
}
<form asp-controller="TabelaDePreco" asp-action="Create" method="post">
    <input type="hidden" asp-for="Id" />
    <h3>@ViewBag.Title</h3>
    <div class="card mt-3">
        <div class="card-body">
            <label for="Descricao">Descrição</label>
            <input type="text" asp-for="Descricao" class="form-control" id="Descricao" />
            <div class="row">
                <div class="col-6 mt-3">
                    <label for="Valor">Valor</label>
                    <input type="number" asp-for="Valor" class="form-control" id="Valor" />
                </div>
                <div class="col-6 mt-3">
                    @Html.LabelFor(model => model.Periodo, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Periodo, new { htmlAttributes = new { @class = "form-control", min="0" } })
                    @Html.ValidationMessageFor(model => model.Periodo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mt-3 text-end">
                <a class="btn btn-secondary" asp-controller="TabelaDePreco" asp-action="Index">Voltar</a>
                <button class="btn btn-success btn-block">Adicionar</button>
            </div>
        </div>
    </div>

</form>