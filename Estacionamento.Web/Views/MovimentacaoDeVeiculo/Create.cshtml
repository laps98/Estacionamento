@using Estacionamento.Domain.Enums;
@using Estacionamento.Domain.MovimentacoesDeVeiculo;
@model MovimentacaoDeVeiculo
@{
    ViewBag.Title = "Movimentação de veículo";
}
@section scripts{
    <script src=""></script>
}
<form asp-controller="Cliente" asp-action="Create" method="post">
    <input type="hidden" asp-for="Id">
    <div>
        <h3>@ViewBag.Title</h3>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="Nome">Nome</label>
                            <input type="text" asp-for="Descricao" class="form-control" id="Descricao" placeholder="Descricao">
                            @Html.ValidationMessageFor(q => q.Descricao)
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="Fluxo">Fluxo</label>  
                            @Html.DropDownList("StudentGender",
                            Html.GetEnumSelectList<Fluxo>(),
                            "Select Gender",new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button class="btn btn-primary btn-block">Adicionar</button>
                </div>

            </div>
        </div>
    </div>
</form>
